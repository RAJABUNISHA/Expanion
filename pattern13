import java.util.*;
public class Main
{
	public static void main(String [] args)
	{
       Scanner s=new Scanner(System.in);
       int l=s.nextInt();
       for(int i=1;i<=l;i++)
       {
           for(int j=1;j<=i;j++)
           {
               int k=((i+j)%2==0)?1:0;
               System.out.print(k);
               if(j<i)
               System.out.print(" ");
           }
           System.out.println("");
       }
	}   
}
